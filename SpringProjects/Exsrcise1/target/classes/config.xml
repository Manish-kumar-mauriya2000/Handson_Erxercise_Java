<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


        <bean class="org.example.exercise1.CustomerDaoImp" name="users">
                <property name="customer" ref="customer1"/>
        </bean>

        <bean class="org.example.exercise1.Customers" name="customer1">
                <property name="userId" value="101" />
                <property name="userName" value="Manish" />
                <property name="email" value="manish@gmail.com" />
                <property name="mobileNumber" value="987654" />
                <property name="city" value="Erode" />
        </bean>

</beans>